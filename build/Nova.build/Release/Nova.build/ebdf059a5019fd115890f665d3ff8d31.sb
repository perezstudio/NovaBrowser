(version 1)
(allow default)
(disable-callouts)
(import "/System/Library/Sandbox/Profiles/bsd.sb")

;; Only deny SRCROOT, PROJECT_DIR and build dirs
(deny file-read* file-write* (subpath (param "SRCROOT")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "PROJECT_DIR")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "OBJROOT")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "SYMROOT")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "DSTROOT")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "SHARED_PRECOMPS_DIR")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "CACHE_ROOT")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "CONFIGURATION_BUILD_DIR")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "CONFIGURATION_TEMP_DIR")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "LOCROOT")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(deny file-read* file-write* (subpath (param "LOCSYMROOT")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(allow file-read* file-write* (subpath (param "TEMP_DIR")))

(deny file-read* file-write* (subpath (param "DERIVED_FILE_DIR")) (with message "ebdf059a5019fd115890f665d3ff8d31"))
(allow file-read* (literal (param "SRCROOT")))
(allow file-read* (literal (param "PROJECT_DIR")))
;; Allow file-read for all the parents of declared input/outputs
(allow file-read* (literal (param "SCRIPT_INPUT_ANCESTOR_0")))
(allow file-read* (literal (param "SCRIPT_INPUT_ANCESTOR_1")))
(allow file-read* (literal (param "SCRIPT_INPUT_ANCESTOR_2")))
(allow file-read* (literal (param "SCRIPT_INPUT_ANCESTOR_3")))
(allow file-read* (literal (param "SCRIPT_INPUT_ANCESTOR_4")))
(allow file-read* (literal (param "SCRIPT_INPUT_ANCESTOR_5")))
(allow file-read* (literal (param "SCRIPT_INPUT_ANCESTOR_6")))
(allow file-read* (literal (param "SCRIPT_INPUT_ANCESTOR_7")))
(allow file-read* (literal (param "SCRIPT_INPUT_ANCESTOR_8")))
;; Allow file-read for resolved (flattened) inputs
(allow file-read* (literal (param "SCRIPT_INPUT_FILE_0")))

